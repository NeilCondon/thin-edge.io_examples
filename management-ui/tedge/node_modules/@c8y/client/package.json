{
  "name": "@c8y/client",
  "version": "1010.0.17",
  "license": "Apache-2.0",
  "author": "Cumulocity",
  "description": "Client application programming interface to access the Cumulocity IoT-Platform REST services.",
  "scripts": {
    "build": "rimraf lib && yarn build:esm5 && yarn build:esm2015 && yarn build:cjs && yarn build:typings && yarn build:rollup",
    "build:esm5": "tsc -p .",
    "build:cjs": "tsc -p .  --module commonjs --outDir lib/cjs",
    "build:esm2015": "tsc -p . --target es2015 --outDir lib/esm2015",
    "build:typings": "tsc -p . --emitDeclarationOnly true --declaration true --declarationDir lib",
    "build:rollup": "rollup -c",
    "docs": "typedoc ./src",
    "lint": "tslint --project tsconfig.json",
    "prepare": "rimraf lib && yarn build",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test": "jest",
    "watch": "tsc --watch"
  },
  "keywords": [
    "Cumulocity",
    "IoT",
    "m2m",
    "Client",
    "API",
    "REST",
    "fetch"
  ],
  "main": "lib/cjs/index.js",
  "browser": "lib/bundles/client.umd.js",
  "module": "lib/fesm5/client.js",
  "esm2015": "lib/esm2015/index.js",
  "fesm2015": "lib/fesm2015/index.js",
  "fesm5": "lib/fesm5/index.js",
  "types": "lib/index.d.ts",
  "dependencies": {
    "@types/node": "10.1.4",
    "b2a": "1.1.2",
    "cometd": "3.1.4",
    "cometd-nodejs-client": "1.0.2",
    "cross-fetch": "2.1.0",
    "form-data": "2.3.2",
    "isomorphic-cometd": "1.1.0",
    "rxjs": "~6.4.0"
  },
  "devDependencies": {
    "@types/fs-extra": "5.0.1",
    "@types/jest": "^22.2.2",
    "fs-extra": "5.0.0",
    "ncp": "2.0.0",
    "rimraf": "2.6.2",
    "rollup": "^0.57.1",
    "rollup-plugin-commonjs": "9.2.2",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-uglify": "3.0.0",
    "ts-jest": "24.0.1",
    "tslint": "^5.9.1",
    "typedoc": "0.11.1",
    "typescript": "3.5.3"
  }
}